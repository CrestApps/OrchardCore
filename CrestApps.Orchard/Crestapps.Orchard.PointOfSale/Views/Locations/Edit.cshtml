<div class="card">
    @{ 
        var t = Model;
    }
    <div class="card-header">
        @T["Edit a Location"]
    </div>
    <div class="card-body">

        <form method="post" asp-controller="Locations" asp-action="Edit" asp-area="@PosConstants.ModuleName" asp-route-id="@Model.Id">
            @await DisplayAsync(Model.Content)

            <button type="submit" class="btn btn-primary offset-sm-2">Save</button>
        </form>
    </div>
</div>